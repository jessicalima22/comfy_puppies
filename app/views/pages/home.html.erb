  <div id="carouselAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselAutoplaying" data-bs-slide-to="0" class="active indicator-carousel" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselAutoplaying" data-bs-slide-to="1" aria-label="Slide 2" class="indicator-carousel"></button>
      <button type="button" data-bs-target="#carouselAutoplaying" data-bs-slide-to="2" aria-label="Slide 3" class="indicator-carousel"></button>
    </div>
    <div class="carousel-inner" >

      <div class="carousel-item active banner-1" data-bs-interval="100000">
        <h1 class="title-carousel">Your best friend awaits for you!</h1>
        <div class="content-carousel">
          <div>
            <p class="text-carousel">Adopt your best company!</p>
            <button class="button pulse"><%= link_to "Adopt now!", animals_path %></button>
          </div>
          <img src="<%= asset_path 'gato-roupa-xadrez.png' %>" class="d-block img-carousel" alt="...">
        </div>
      </div>

      <div class="carousel-item banner-2" data-bs-interval="100000">
        <h1 class="title-carousel">Let's find a family for them!</h1>
        <div class="content-carousel">
          <div>
            <p class="text-carousel">Do you have a pet to put up for adoption? We'll help you!</p>
            <button class="button pulse"><%= link_to "Register for adoption", new_animal_path %></button>
          </div>
          <img src="<%= asset_path 'cachorro-blusa-amarela.png' %>" class="d-block img-carousel dog-yellow" alt="...">
        </div>
      </div>

      <div class="carousel-item" data-bs-interval="10000">
        <img src="<%= asset_path 'fernandinho.png' %>"class="d-block img-carousel" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselAutoplaying" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselAutoplaying" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>

  </div>
