
<div class="main">

  <!-- SECTION: carousel -->
  <div id="carouselAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselAutoplaying" data-bs-slide-to="0" class="active indicator-carousel" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselAutoplaying" data-bs-slide-to="1" aria-label="Slide 2" class="indicator-carousel"></button>
      <button type="button" data-bs-target="#carouselAutoplaying" data-bs-slide-to="2" aria-label="Slide 3" class="indicator-carousel"></button>
    </div>

    <div class="carousel-inner">

      <div class="carousel-item active banner-1" data-bs-interval="100000">
        <h1 class="title-carousel">Your best friend awaits you!</h1>
        <div class="content-carousel">
          <div class="text-button">
            <p class="text-carousel">Adopt your best company!</p>
            <button class="button button-carosel pulse"><%= link_to "Adopt now!", animals_path %></button>
          </div>
          <img src="<%= asset_path 'gatohome.png' %>" class="d-block img-carousel img-banner-1" alt="...">
        </div>
      </div>

      <div class="carousel-item banner-2" data-bs-interval="100000">
        <h1 class="title-carousel">Let's find him a home!</h1>
        <div class="content-carousel">
          <div  class="text-button">
            <p class="text-carousel">Found a pet and can't keep him? We can help!</p>
            <button class="button-carosel pulse"><%= link_to "Register pet", new_animal_path %></button>
          </div>
          <img src="<%= asset_path 'cachorro-blusa-amarela.png' %>" class="d-block img-carousel img-banner-2" alt="...">
        </div>
      </div>

      <div class="carousel-item banner-1" data-bs-interval="10000">
        <h1 class="title-carousel">AAAAAAAAAAAAAAA</h1>
        <div class="content-carousel">
          <div  class="text-button">
            <p class="text-carousel">BBBBBBBBBBBBBB</p>
            <button class="button-carosel pulse"><%= link_to "Adote jÃ¡!", animals_path %></button>
          </div>
          <img src="<%= asset_path 'gatohome.png' %>" class="d-block img-carousel" alt="...">
        </div>
      </div>

    </div> <!-- Closing tag for carousel-inner -->

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselAutoplaying" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselAutoplaying" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!-- NEXT SECTION: Why Adopt? -->
  <div class="why-adopt-section"> <!-- Whole blue section -->
    <div class="why-adopt-content">
      <div class="why-adopt-text">
        <h1 class="why-adopt-title">WHY ADOPT?</h1> <!-- Section title -->
        <p class="why-adopt-mini-text">There are many animals in the streets, adopting can make a real difference!</p>
      </div>
      <img src="<%= asset_path 'dogreasons.png' %>" class="why-adopt-image" alt="Adopt a pet">
      <div class="reasons">
        <p class="reason">
          <img src="<%= asset_path('house.png') %>" alt="Paw" class="emoji-img">
          You can save lives!
        </p>
        <p class="reason">
          Your pet will ALWAYS love you!
          <img src="<%= asset_path('love.png') %>" alt="Heart" class="emoji-img2">
        </p>
        <p class="reason">
          <img src="<%= asset_path('paw.png') %>" alt="Star" class="emoji-img">
          It's a fulfilling experience!
        </p>
      </div>
    </div>
  </div>

<!-- NEXT SECTION: Pet cards -->
  <div class="home-cards-section">
    <h1 class="title-home-cards-section">Adopt a pet!</h1>
    <p class="p-home-cards-section">They're waiting for you!</p>
    <img src="<%= asset_path('pet-care.png') %>" alt="animals" class="emoji-img">
    <div class="row div-home-cards">
        <% if @animals.present? %>
          <% @animals.limit(3).each do |animal| %>

            <div class="col-sm-12 col-md-4 col-lg-4 mb-4">
              <%= link_to animal_path(animal), class: "content_link text-decoration-none" do %>
                <div class="card text-dark card-has-bg click-col card-home">
                  <% if animal.photos.attached? %>
                    <%= cl_image_tag(animal.photos.first.key, crop: "fill", gravity: "center", class: "card_img_home") %>
                  <% else %>
                    <div class="d-flex justify-content-center align-items-center" style="height: 450px;">
                      <%= image_tag('paws-no-photo.jpg', style: "min-heigth: 360px;", class: "d-block") %>
                    </div>
                  <% end %>


                  <div class="card-img-overlay d-flex flex-column justify-content-between">

                    <div class="card-footer">

                      <div class="media-body text-center">
                        <h3 class="my-0 text-light d-block text-shadow"><%= animal.name %></h3>
                        <medium class="text-light text-shadow"><%= animal.gender %></medium>
                      </div>

                      <%= link_to "Know More", animal_path(animal), class: 'know_more_button mt-2 text-center button pulse ' %>
                    </div>

                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <h1>No animals available yet</h1>
        <% end %>
      </div>
  </div>




<footer>
  <div class="footer">
    <p class="footer-message">Support Comfy Puppies on social media! Talk to us!</p>
    <div class="social-icons">
      <a href="https://www.facebook.com" target="_blank">
        <img src="<%= asset_path 'facebook-icon.png' %>" alt="facebook" class="icon">
      </a>
      <a href="https://www.instagram.com" target="_blank">
        <img src="<%= asset_path 'instagram-icon.png' %>" alt="Instagram" class="icon">
      <a href="https://www.twitter.com" target="_blank">
        <img src="<%= asset_path 'twitter-icon.png' %>" alt="twitter" class="icon">
      </a>
    </div>
    <p class="footer-credits">
      Icons made by <a href="https://www.flaticon.com/authors/lizel-arina" title="Lizel Arina">Lizel Arina</a> from <a href="https://www.flaticon.com/" title="Flaticon">Flaticon</a>
    </p>
  </div>
</footer>
</div>


