<!-- SECTION: carousel -->
<div id="carouselAutoplaying" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselAutoplaying" data-bs-slide-to="0" class="active indicator-carousel" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselAutoplaying" data-bs-slide-to="1" aria-label="Slide 2" class="indicator-carousel"></button>
    <button type="button" data-bs-target="#carouselAutoplaying" data-bs-slide-to="2" aria-label="Slide 3" class="indicator-carousel"></button>
  </div>

  <div class="carousel-inner">

    <div class="carousel-item active banner-1" data-bs-interval="100000">
      <h1 class="title-carousel">Your best friend awaits you!</h1>
      <div class="content-carousel">
        <div class="text-button">
          <p class="text-carousel">Adopt your best company!</p>
          <button class="button-carosel pulse"><%= link_to "Adopt now!", animals_path %></button>
        </div>
        <img src="<%= asset_path 'gatohome.png' %>" class="d-block img-carousel img-banner-1" alt="...">
      </div>
    </div>

    <div class="carousel-item banner-2" data-bs-interval="100000">
      <h1 class="title-carousel">Let's find him a home!</h1>
      <div class="content-carousel">
        <div  class="text-button">
          <p class="text-carousel">Found a pet and can't keep him? We will help!</p>
          <button class="button-carosel pulse"><%= link_to "Register pet", new_animal_path %></button>
        </div>
        <img src="<%= asset_path 'cachorro-blusa-amarela.png' %>" class="d-block img-carousel img-banner-2" alt="...">
      </div>
    </div>

    <div class="carousel-item banner-1" data-bs-interval="10000">
