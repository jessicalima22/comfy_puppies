<div class="container">
  <%= simple_form_for (@animal) do |f| %>
    <%= f.input :name %>
    <%= f.input :breed %>
    <%= f.input :size %>
    <%= f.input :gender %>
    <%= f.input :age %>
    <div class="input-group">
    <%= f.input :castrated %>
    <%= f.input :vaccinated %>
    <%= f.input :dewormed %>
    </div>
    <%= f.input :special_needed %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
  <%= link_to 'Voltar', animals_path %>
</div>
